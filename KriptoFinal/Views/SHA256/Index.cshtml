@{
    ViewData["Title"] = "SHA-256 Hash Hesapla";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>SHA-256 Hash Hesaplama</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@500;600&family=Orbitron:wght@700&display=swap" rel="stylesheet">

    <style>
        * {
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
            color: #e0f7fa;
            min-height: 100vh;
            padding: 60px 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        h1 {
            font-family: 'Orbitron', sans-serif;
            font-size: 2.6rem;
            color: #00eaff;
            text-shadow: 0 0 20px #00eaff;
            margin-bottom: 40px;
            text-align: center;
        }

        form {
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            padding: 40px;
            border-radius: 20px;
            box-shadow: 0 0 30px rgba(0, 234, 255, 0.1);
            width: 100%;
            max-width: 700px;
            display: flex;
            flex-direction: column;
            gap: 25px;
        }

        label {
            font-size: 1.2rem;
            font-weight: 600;
            color: #90e0ef;
        }

        textarea {
            width: 100%;
            height: 150px;
            background-color: #001d33;
            border: 2px solid #00eaff;
            color: #00eaff;
            padding: 16px;
            font-family: monospace;
            font-size: 1.05rem;
            border-radius: 10px;
            resize: vertical;
        }

        input[type="file"] {
            color: #00eaff;
            font-size: 1rem;
            background-color: transparent;
            border: 1px dashed #00eaff;
            padding: 10px;
            border-radius: 10px;
        }

        button[type="submit"] {
            background-color: #00eaff;
            border: none;
            color: #001c2b;
            padding: 16px 30px;
            font-size: 1.2rem;
            font-weight: bold;
            border-radius: 10px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            align-self: center;
            min-width: 180px;
        }

            button[type="submit"]:hover {
                background-color: #0088cc;
                color: #ffffff;
            }

        .input-selection {
            display: flex;
            justify-content: center;
            gap: 40px;
            font-size: 1.1rem;
            color: #00eaff;
        }

        .result {
            margin-top: 40px;
            background: rgba(0, 30, 50, 0.5);
            border: 1px solid #00eaff;
            padding: 20px;
            border-radius: 12px;
            font-family: monospace;
            font-size: 1.1rem;
            white-space: pre-wrap;
            word-break: break-word;
            max-width: 700px;
        }

            .result strong {
                color: #00eaff;
            }

        .error {
            margin-top: 20px;
            color: #ff4d4d;
            font-weight: bold;
            text-align: center;
            font-size: 1.1rem;
        }

        .back-btn {
            display: inline-block;
            margin: 30px auto 0;
            background-color: transparent;
            color: #00eaff;
            border: 2px solid #00eaff;
            padding: 12px 32px;
            font-size: 1.1rem;
            font-weight: bold;
            border-radius: 12px;
            text-decoration: none;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .back-btn:hover {
                background-color: #00eaff;
                color: #001c2b;
            }
    </style>

    <script>
        function toggleInputFields() {
            const textRadio = document.getElementById('inputTypeText');
            const fileRadio = document.getElementById('inputTypeFile');
            const textareaContainer = document.getElementById('textareaContainer');
            const fileInputContainer = document.getElementById('fileInputContainer');

            if (textRadio.checked) {
                textareaContainer.style.display = "block";
                fileInputContainer.style.display = "none";
                document.getElementById('inputFile').value = "";
            } else if (fileRadio.checked) {
                textareaContainer.style.display = "none";
                fileInputContainer.style.display = "block";
                document.getElementById('inputText').value = "";
            }
        }

        window.onload = function () {
            toggleInputFields();
            document.getElementById('inputTypeText').addEventListener('change', toggleInputFields);
            document.getElementById('inputTypeFile').addEventListener('change', toggleInputFields);
        }
    </script>
</head>
<body>

    <h1>🔐 SHA-256 Hash Hesaplama</h1>

    <form asp-action="Index" method="post" enctype="multipart/form-data">

        <div class="input-selection">
            <label>
                <input type="radio" id="inputTypeText" name="inputType" value="text" checked />
                📄 Metin
            </label>

            <label>
                <input type="radio" id="inputTypeFile" name="inputType" value="file" />
                📁 Dosya
            </label>
        </div>

        <div id="textareaContainer">
            <label for="inputText">Metin Girin:</label>
            <textarea id="inputText" name="inputText" placeholder="Hash hesaplamak istediğiniz metni buraya yazın...">@ViewBag.InputText</textarea>
        </div>

        <div id="fileInputContainer" style="display:none;">
            <label for="inputFile">Dosya Seçin:</label>
            <input type="file" id="inputFile" name="inputFile" />
        </div>

        <button type="submit">⚙️ Hash Hesapla</button>
    </form>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="error">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <div>@error.ErrorMessage</div>
            }
        </div>
    }

    @if (ViewBag.HashResult != null)
    {
        <div class="result">
            <strong>SHA-256 Hash Sonucu:</strong><br />
            @ViewBag.HashResult
        </div>
    }

    <a class="back-btn" href="/">⬅️ Ana Sayfa</a>

</body>
</html>
