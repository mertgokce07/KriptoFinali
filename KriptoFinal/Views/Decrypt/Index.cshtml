@{
    ViewData["Title"] = "RSA Şifre Çöz";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>RSA Şifre Çöz</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@500;600&family=Orbitron:wght@700&display=swap" rel="stylesheet">

    <style>
        * {
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
            color: #e0f7fa;
            min-height: 100vh;
            padding: 60px 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        h1 {
            font-family: 'Orbitron', sans-serif;
            font-size: 2.8rem;
            color: #00eaff;
            text-shadow: 0 0 20px #00eaff;
            margin-bottom: 40px;
            text-align: center;
        }

        form {
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            padding: 40px;
            border-radius: 20px;
            box-shadow: 0 0 40px rgba(0, 234, 255, 0.1);
            width: 100%;
            max-width: 800px;
            display: flex;
            flex-direction: column;
            gap: 25px;
        }

        label {
            font-size: 1.3rem;
            font-weight: 600;
            color: #90e0ef;
        }

        textarea {
            width: 100%;
            height: 160px;
            background-color: #001d33;
            border: 2px solid #00eaff;
            color: #00eaff;
            padding: 16px;
            font-family: monospace;
            font-size: 1.05rem;
            border-radius: 10px;
            resize: vertical;
        }

        button[type="submit"] {
            background-color: #00eaff;
            border: none;
            color: #001c2b;
            padding: 16px 30px;
            font-size: 1.2rem;
            font-weight: bold;
            border-radius: 10px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            align-self: center;
            min-width: 180px;
        }

            button[type="submit"]:hover {
                background-color: #0088cc;
                color: #ffffff;
            }

        .loading-spinner {
            display: none;
            width: 48px;
            height: 48px;
            border: 5px solid #00eaff;
            border-top: 5px solid transparent;
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin: 0 auto;
        }

        @@keyframes spin {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }

        .result {
            margin-top: 40px;
            background: rgba(0, 30, 50, 0.5);
            border: 1px solid #00eaff;
            padding: 20px;
            border-radius: 12px;
            font-family: monospace;
            font-size: 1.1rem;
            white-space: pre-wrap;
            word-break: break-word;
            max-width: 800px;
        }

            .result strong {
                color: #00eaff;
            }

        .error {
            margin-top: 20px;
            color: #ff4d4d;
            font-weight: bold;
            text-align: center;
            font-size: 1.1rem;
        }

        .back-btn {
            display: inline-block;
            margin: 50px auto 0;
            background-color: transparent;
            color: #00eaff;
            border: 2px solid #00eaff;
            padding: 12px 32px;
            font-size: 1.1rem;
            font-weight: bold;
            border-radius: 12px;
            text-decoration: none;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .back-btn:hover {
                background-color: #00eaff;
                color: #001c2b;
            }
    </style>
</head>
<body>

    <h1>🔓 RSA Şifre Çöz</h1>

    <form asp-action="Index" method="post" onsubmit="showLoading()">
        <label for="privateKeyBase64">🧬 Private Key:</label>
        <textarea id="privateKeyBase64" name="privateKeyBase64" placeholder="Private key'i buraya girin...">@ViewBag.PrivateKey</textarea>

        <label for="encryptedTextBase64">🛡️ Şifrelenmiş Metin:</label>
        <textarea id="encryptedTextBase64" name="encryptedTextBase64" placeholder="Şifrelenmiş metni buraya girin...">@ViewBag.EncryptedText</textarea>

        <button type="submit" id="submitBtn">🔓 Şifreyi Çöz</button>
        <div class="loading-spinner" id="loadingSpinner"></div>
    </form>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="error">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <div>@error.ErrorMessage</div>
            }
        </div>
    }

    @if (ViewBag.DecryptedText != null)
    {
        <div class="result">
            <strong>Çözülmüş Haldeki Metin:</strong><br />
            @ViewBag.DecryptedText
        </div>
    }

    <button class="back-btn" type="button" onclick="window.location.href='/'">⬅️ Ana Sayfa</button>


    <script>
        function showLoading() {
            document.getElementById('submitBtn').style.display = 'none';
            document.getElementById('loadingSpinner').style.display = 'block';
        }
    </script>
</body>
</html>
